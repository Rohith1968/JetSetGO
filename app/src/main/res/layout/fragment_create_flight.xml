<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".Fragments.CreateFlightFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter flight number"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editFlightNumber"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Flight Number"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:placeholderText="Enter aircraft model"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAircraftModel"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Aircraft Model"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false" android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter departure city"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDepartureCity"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Departure City"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="D/M/YYYY"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDepartureDate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Departure Date"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="HH:MM"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDepartureTime"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Departure Time"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="time"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false" android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter destination city"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDestinationCity"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Arrival City"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter arrival date"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editArrivalDate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Arrival Date"
                    android:inputType="date"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter arrival time"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Arrival Time"
                    android:inputType="time"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false" android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter booking open date"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBookingOpenDate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Booking Open Date"
                    android:inputType="date"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:placeholderText="Enter Duration"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDuration"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Duration"
                    android:inputType="time"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false" android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Enter max number of seats"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMaxNumOfSeats"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Max Number of Seats"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="number"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:placeholderText="Price per extra baggage"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editExtraBaggagePrice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Extra Baggage Price"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:baselineAligned="false" android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:placeholderText="Economy class price"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEconomyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Economy Price"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:placeholderText="Business class price"
                app:placeholderTextAppearance="@style/PlaceholderTextStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBusinessPrice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Business Price"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Frequency"
            android:textColor="@color/darkPurple"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerIsRecurrent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="5"
            android:minHeight="60dp"
            android:popupBackground="@drawable/rounded_popup" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_corners"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/darkPurple"
            android:fontFamily="@font/poppins_bold"
            android:padding="12dp"
            android:text="Continue"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>